{% extends 'backend.html.twig' %}

{% block contenido %}
    <h1>Lista de posts</h1>

    <table>
        <thead>
            <tr>
                <th class="pr-4 pl-4">Id</th>
                <th class="pr-4 pl-4">Texto</th>
                <th class="pr-4 pl-4">Fechacreacion</th>
                <th class="pr-4 pl-4">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td class="pr-4 pl-4"><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td class="pr-4 pl-4">{{ post.texto }}</td>
                <td class="pr-4 pl-4">{% if post.fecha_Creacion %}{{ post.fecha_Creacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td class="pr-4 pl-4">
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('post_show', { 'id': post.id }) }}">Mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_new') }}">Create a new post</a>
        </li>
    </ul>
{% endblock %}
